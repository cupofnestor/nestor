package com.nestor.tools {	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.net.URLLoaderDataFormat;	import flash.events.*;		public class phpQuery extends EventDispatcher {		public var ldr:URLLoader;		public var vars:XML;				public function phpQuery(_url:String) {			var ldr = new URLLoader();			var url:URLRequest = new URLRequest(_url);			ldr.dataFormat = URLLoaderDataFormat.TEXT;			ldr.addEventListener(Event.COMPLETE,loaded);			ldr.load(url);		}				private function loaded(e:Event):void		{			//e.bubbles=true;			e.target.removeEventListener(Event.COMPLETE,loaded);			vars = new XML(e.target.data);			dispatchEvent(e);			//return vars;		}	}	}