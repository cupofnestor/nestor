package com.nestor.tools {		public class aUtil {		public function aUtil() {			// constructor code		}						//shuffles an array using Fisher-Yates		public function shuffle(a:Array):Array		{						var l:Number = a.length;			//r decrements to establish the "range" to select from.			for (var r:Number = l; r>0 ; r--)			{				//random number within current range				var rI : int = Math.floor( Math.random() * r );				//delecte the element at the random Index				var removed:Array = a.splice(rI,1);				//and push it onto the original array.				a.push(removed[0]);			}			return a;		}	}	}