package com.nestor.elements {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;		public class btn extends MovieClip {						public function btn() {			this.addEventListener(MouseEvent.MOUSE_DOWN, down);		}				private function down(m:MouseEvent){			this.removeEventListener(MouseEvent.MOUSE_DOWN, down);			this.gotoAndStop("down");			this.addEventListener(MouseEvent.MOUSE_UP, up);					}				private function up(m:MouseEvent){			this.removeEventListener(MouseEvent.MOUSE_UP, up);			this.gotoAndStop("up");			this.addEventListener(MouseEvent.MOUSE_DOWN, down);					}			}	}