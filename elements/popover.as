package com.nestor.elements {		import flash.display.MovieClip;	import com.greensock.TweenLite;	import flash.events.MouseEvent;	import flash.utils.Timer;	import flash.events.*;		public class popover extends MovieClip {		public var time = 0.2;		public var span = 55555;		private var tout:Timer;		public var btnLabel:String;		public var mess:String;		public function popover(_mess:String="Default Message",_btnLabel:String="OK") {			mess=_mess;			btnLabel=_btnLabel;			this.addEventListener(Event.ADDED_TO_STAGE, init);					}				private function init(e:Event):void		{			trace("Popover: "+mess);			this.removeEventListener(Event.ADDED_TO_STAGE, init);			btn.field.text=btnLabel;			body.text=mess;			trace("STAGE:"+stage.width+"x"+stage.height);			this.x=stage.stageWidth/2;			this.y=stage.stageHeight/2;						body.mouseEnabled=false;			frame.mouseEnabled=false;			this.scaleX=this.scaleY=0;			this.alpha=0;			tout = new Timer(span, 0);			tout.addEventListener(TimerEvent.TIMER_COMPLETE, timeout);					}				public function on():void		{			TweenLite.to(this, time, {scaleX:1, scaleY:1, alpha:1});			btn.addEventListener(MouseEvent.MOUSE_UP, btnPressed);			tout.start();		}				private function btnPressed(m:MouseEvent):void		{			off();			btn.removeEventListener(MouseEvent.MOUSE_UP, btnPressed);		}				private function timeout(t:TimerEvent):void		{			off();			tout.removeEventListener(TimerEvent.TIMER_COMPLETE, timeout);			tout=null;			TweenLite.to(this, time, {scaleX:0, scaleY:0, alpha:0,onComplete:timoutEvent});		}				public function off():void		{			TweenLite.to(this, time, {scaleX:0, scaleY:0, alpha:0,onComplete:done});		}				private function done():void		{			dispatchEvent(new Event(Event.COMPLETE));		}				private function timoutEvent():void		{			dispatchEvent(new Event(Event.CANCEL));		}			}	}