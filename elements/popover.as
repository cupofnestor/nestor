package com.nestor.elements {		import flash.display.MovieClip;	import com.greensock.TweenLite;	import flash.events.MouseEvent;	import flash.utils.Timer;	import flash.events.*;	import flash.geom.Point;		public class popover extends MovieClip {		public var time = 0.2;		public var span:Number;		private var tout:Timer;		public var btnLabel:String;		public var mess:String;		public var loc:Point;				public function popover(_mess:String="Default Message",_btnLabel:String="OK",_span:Number=55555,_x:Number= 0,_y:Number=0) {			loc=new Point(_x,_y);			mess=_mess;			btnLabel=_btnLabel;			span=_span;			trace("Popover Timeout ="+span);			this.addEventListener(Event.ADDED_TO_STAGE, init);					}				private function init(e:Event):void		{			trace("Popover: "+mess);			this.removeEventListener(Event.ADDED_TO_STAGE, init);			btn.field.text=btnLabel;			body.text=mess;			trace("STAGE:"+stage.stageWidth+"x"+stage.stageHeight);			this.x= loc.x;			this.y= loc.y;						body.mouseEnabled=false;			frame.mouseEnabled=false;			this.scaleX=this.scaleY=0;			this.alpha=0;			tout = new Timer(span*1000, 1);			tout.addEventListener(TimerEvent.TIMER_COMPLETE, timeout);					}				public function on():void		{			TweenLite.to(this, time, {scaleX:1, scaleY:1, alpha:1});			btn.addEventListener(MouseEvent.MOUSE_UP, btnPressed);			tout.start();		}				private function btnPressed(m:MouseEvent):void		{			off();			btn.removeEventListener(MouseEvent.MOUSE_UP, btnPressed);		}				private function timeout(t:TimerEvent):void		{			trace("Popover Timeout!!!");			off();			tout.removeEventListener(TimerEvent.TIMER_COMPLETE, timeout);			tout=null;			TweenLite.to(this, time, {scaleX:0, scaleY:0, alpha:0,onComplete:timoutEvent});		}				public function off():void		{			TweenLite.to(this, time, {scaleX:0, scaleY:0, alpha:0,onComplete:done});		}				private function done():void		{			dispatchEvent(new Event(Event.COMPLETE));		}				private function timoutEvent():void		{			dispatchEvent(new Event(Event.CANCEL));		}			}	}