package com.nestor.elements {	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.geom.Matrix;	import flash.geom.Point;	import flash.events.Event;		public class bitmapScroll extends Sprite {		public var speed_x:Number = 1;		public var speed_y:Number = 1;		private var matrix:Matrix = null;		private var bmd:BitmapData = null;		private var wide:Number;		private var high:Number;				public function bitmapScroll() {			// constructor code		}				public function set active(b:Boolean):void		{			if(b == true){				(this.hasEventListener(Event.ENTER_FRAME)) ? null : this.addEventListener(Event.ENTER_FRAME, animate);			}			else{				(this.hasEventListener(Event.ENTER_FRAME)) ? this.removeEventListener(Event.ENTER_FRAME, animate) : null;			}					}				public function set scrollBMD(_bmd:BitmapData):void		{			bmd = _bmd;			wide = bmd.width;			high = bmd.height;			matrix = new Matrix();		}				public function set scrollMC(mc:MovieClip):void		{			wide = mc.width;			high = mc.height;			bmd = new BitmapData(wide,high,true,0x00000000);			bmd.draw(mc);			matrix = new Matrix();		}				private function animate(e:Event):void		{			matrix.tx += speed_x;			matrix.ty += speed_y;			draw();		}				private function draw():void {			graphics.clear();			graphics.beginBitmapFill (bmd, matrix, true, false);			graphics.drawRect (0, 0, wide, high);			graphics.endFill();		}	}	}