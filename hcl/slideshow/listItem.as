package com.nestor.hcl.slideshow {		import flash.display.MovieClip;	import flash.display.Bitmap;		import flash.events.*;		public class listItem extends MovieClip {		var id:Number;		var X:XML;		var ico:Bitmap;				public function listItem(_X:XML, _ico:Bitmap) {			// constructor code			X=_X;			id=Number(X.id.toString());						ico = _ico;						addChild(ico);			this.addEventListener(Event.ADDED_TO_STAGE,init);		}				private function init(e:Event):void		{			_title.mouseEnabled=false;			_title.text=X.name;					}				public function resizeTo(_w,_h):void		{						ico.width=ico.height=_h;						_fill.width=_w;			_fill.height=_h;						_title.x=_h;			_title.height=_h;			_title.width=_w-_h;						}	}	}