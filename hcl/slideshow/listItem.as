package com.nestor.hcl.slideshow {		import flash.display.MovieClip;	import flash.display.Bitmap;		import flash.events.*;		public class listItem extends MovieClip {		public var id:Number;		private var X:XML;		private var ico:Bitmap;		public var showname:String;		public var isSWF:Boolean;				public function listItem(_X:XML, _ico:Bitmap) {			// constructor code			this.mouseChildren=false;			X=_X;			var _id:String;			_id=String(X.id);			id=Number(_id);			isSWF=(_id == "swf");						showname=X.name;			ico = _ico;						addChild(ico);			this.addEventListener(Event.ADDED_TO_STAGE,init);		}				private function init(e:Event):void		{			_title.mouseEnabled=false;						_title.text=showname;					}				public function resizeTo(_w,_h):void		{						ico.width=ico.height=_h;						_fill.width=_w;			_fill.height=_h;						_title.x=_h;			_title.height=_h;			_title.width=_w-_h;						}	}	}