package com.nestor.hcl.slideshow {	import flash.events.*;	import flash.html.*;	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	import com.greensock.TweenLite;			public class slide extends Sprite{		var bm:Bitmap;		var bmd:BitmapData;		var hload:HTMLLoader;		var t:Number=0.25;				public function slide(s:String, w:Number=640, h:Number=480) {			addEventListener(Event.ADDED_TO_STAGE, init);			hload = new HTMLLoader();			hload.width = w;			hload.height = h;			bm = new Bitmap()			bmd = new BitmapData(hload.width, hload.height);			hload.addEventListener(Event.COMPLETE, loadedHTML);			hload.loadString(s);		}				private function init(e:Event):void		{			trace("INIT");			alpha=0;					}				private function loadedHTML(e:Event):*		{			e.target.removeEventListener(Event.COMPLETE, loadedHTML);			trace("HTML LOADED, CHEIF");			addChild(e.target as Sprite);			dispatchEvent(new Event("readyToPlay", true));		}				public function born():void		{			TweenLite.to(this, t,{alpha:1,onComplete:alive})		}		public function die():void		{			TweenLite.to(this, t,{alpha:0,onComplete:dead})		}				private function alive():void		{			dispatchEvent(new Event(Event.COMPLETE));			alpha=1;		}		private function dead():void		{			dispatchEvent(new Event(Event.COMPLETE));			alpha=1;		}	}	}