package com.nestor.hcl.slideshow  {		import flash.display.MovieClip;	import com.nestor.tools.cfgloader;	import flash.events.*;	import com.nestor.hcl.*	import flash.html.HTMLLoader;    import flash.net.URLRequest;	import flash.display.Loader;	import com.nestor.hcl.slideshow.showList;		public class listtest extends MovieClip {		private var c:XML;		private var www,templates,bg,shows:String;		private var l:showList;		private var sshow:show;		public function listtest() {			// constructor code			var _c:cfgloader=new cfgloader('slideshow.cfg');			_c.addEventListener(Event.COMPLETE, setupShow);					}				private function setupShow(e:Event):void		{			c=e.target.cfg;			www=c.net.www.toString();			templates=c.net.templates.toString();			bg=c.net.bg_img.toString();						setupBG();			setupList();								}				private function setupBG():void		{						var bgLdr:Loader=new Loader();			var bgUrl:String=www+templates+bg;			trace("BG Image: "+bgUrl);			var bgReq:URLRequest=new URLRequest(bgUrl);			bgLdr.load(bgReq);			addChildAt(bgLdr,0);		}				private function setupList():void		{						var l=new showList(c);			l.y=c.list.listitem.@padding;			addChild(l);			l.addEventListener(MouseEvent.MOUSE_UP, clicked);		}				private function clicked(m:Event):void		{			var s:show=new show(c, m.target.id);			addChild(s);		}	}	}