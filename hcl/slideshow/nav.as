package com.nestor.hcl.slideshow {		import flash.display.MovieClip;	import flash.events.*;		public class nav extends MovieClip {		private var thisMode="next";				public function nav() {			addEventListener(Event.ADDED_TO_STAGE, init);			addEventListener(MouseEvent.MOUSE_DOWN,down);		}				private function init(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, init);			this.gotoAndStop(thisMode);		}				public function set btnMode(s:String):void		{			trace("btnMode: "+s);			thisMode=s;			this.gotoAndStop(thisMode);			(s=="hide") ? removeEventListener(MouseEvent.MOUSE_DOWN,down) : addEventListener(MouseEvent.MOUSE_DOWN,down);		}				public function get btnMode():String		{			return thisMode;		}				private function down(m:Event):void		{			trace("NAV DOWN");			this.gotoAndStop("down");			removeEventListener(MouseEvent.MOUSE_DOWN,down);			addEventListener(MouseEvent.MOUSE_UP,up);		}				private function up(m:Event):void		{			trace("NAV UP");			removeEventListener(MouseEvent.MOUSE_UP,up);			this.gotoAndStop(thisMode);		}			}	}