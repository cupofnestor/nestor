package com.nestor.hcl.quiz {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import com.greensock.TweenLite;		public class login extends MovieClip {		public var email:String;		public var user:String;				public function login() {			// constructor code			ok.addEventListener(MouseEvent.MOUSE_UP, submit);		}				private function submit(m:Event):void		{			ok.removeEventListener(MouseEvent.MOUSE_UP, submit);			if(isValidEmail(this._email.text))			   {				   email=this._email.text;				   user=this._user.text;				   this._error.text="Thank You.";				   TweenLite.to(this,0.25,{alpha:0,delay:0.5,onComplete:kill});			   }			   			else{				this._error.text="Please enter a valid email address in the form:  me@myisp.com";				ok.addEventListener(MouseEvent.MOUSE_UP, submit);			}		}				public function kill():void		{			dispatchEvent(new Event(Event.COMPLETE));		}				function isValidEmail(email:String):Boolean {			var emailExpression:RegExp = /^[a-z][\w.-]+@\w[\w.-]+\.[\w.-]*[a-z][a-z]$/i;			return emailExpression.test(email);		}					}	}