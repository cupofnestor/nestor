package com.nestor.hcl.cases{import flash.display.MovieClip;import flash.net.*;import flash.events.*;	public class amfPHPLoader extends MovieClip	{		var gw:NetConnection = new NetConnection();	var res:Responder;		var d:Object;			public function amfPHPLoader(server:String)		{			res = new Responder(onResult, onFault);						gw.connect(server);					}				public function goGet(method:String, arg:Number):void		{			gw.call(method, res, arg);		}								function onResult(responds:Object):void		{						trace("Response"+responds);			// parse the ArrayCollection			d = responds;			dispatchEvent(new Event(Event.COMPLETE));		}				/*function onItemsResult(responds:Object):void		{			trace(responds);					}*/				function onFault(responds:Object):void		{			for(var i in responds)			{				trace(responds[i]);			}		}			}}