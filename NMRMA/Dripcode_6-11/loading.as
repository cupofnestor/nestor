package{	import flash.display.*;	import flash.events.*;	import flash.utils.Timer;	import caurina.transitions.*;		public class  loading extends MovieClip	{		private var err:errorAlert;		private var countDown:Timer;		public function loading():void		{				trace("Loading...");			countDown = new Timer(8000, 1);			addEventListener(Event.ADDED_TO_STAGE, birth);		}				private function birth(e:Event):void		{			trace("Loading...Birth");			countDown.addEventListener(TimerEvent.TIMER_COMPLETE, countDownHandler);			countDown.start();			removeEventListener(Event.ADDED_TO_STAGE, birth);		}						public function kill():void		{						var suicide:Function = function suicide():void			{				//trace("graph suicide");				var par:Object = this.parent;				par.removeChild(this);			}			countDown.stop();			//trace("alert killed");			Tweener.addTween( this, { scaleX:0,scaleY:0, alpha:0, time:1, transition:"easeOut" } );		}				private function countDownHandler(t:TimerEvent):void		{			trace("Server Error");			err=new errorAlert();			addChild(err);		}	}}