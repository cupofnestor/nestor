package {	import flash.display.*;	import flash.events.*;		public class  regional extends graph	{		public var reg_name:String;		var textLayer:hucTextLayer = new hucTextLayer();		var regBtn_mc:regBtn = new regBtn();		var d1:dispatcher = new dispatcher("regional");		var regDescription:regDes = new  regDes();		public function regional(_reg_name:String, reg:Number):void		{							addChildAt(textLayer,0);			var desc:String = regDescription.getDesc(reg);			textLayer.label.text = "Your Region:"			var detail:String = desc+"\n"+ "\n"+"Garbage and pollution from your local watershed may flow into other rivers in the region.  That is why it is so important to keep rivers clean."+"\n"+"\n"+									 "Next, explore a map of all the regional watersheds to learn about water in others parts of the U.S."+"\n"+ "\n";				textLayer.detail.field.text=detail;			textLayer.hucField.text = _reg_name;			addChild(regBtn_mc);			regBtn_mc.x = 1150;			regBtn_mc.y = 670;			regBtn_mc.active_area.addEventListener(MouseEvent.MOUSE_UP,regionalOutTransition);		}										private function regionalOutTransition(e:MouseEvent):void		{			d1.finished();		}	}}