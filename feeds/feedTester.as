package com.nestor.feeds  {	//import com.nestor.feeds.*;	import flash.display.MovieClip;	import flash.events.Event;	import com.adobe.xml.syndication.atom.*;	import flash.display.Loader;	import flash.net.URLRequest;	import com.nestor.elements.pictureWindow;	public class feedTester extends MovieClip {				public function feedTester() {			setupBlog();		}				private function setupBlog()		{			var myFeed:feedLoader=new feedLoader("http://cupofnestor.blogspot.com/feeds/posts/default");			myFeed.addEventListener("newFeed", parseFeed);		}				private function parseFeed(e:Event):void		{			var postTitle:String; 			var postContent:String;			var feed:Array = new Array();			feed = e.target.feed.items;			postTitle = feed[0].title;			postContent = feed[0].content;			this.head.text = postTitle;						trace(postContent);			var idSub:int = postContent.search("<div");						var image:String =  postContent.substr(idSub);			var imageHTML:String = "<html>";			imageHTML += image+"</html>";						parseHTML(imageHTML);						var idBR:int=postContent.search("<br />");			var bodyText:String=postContent.substr(0, idBR);			this.body.text = bodyText;					}				private function parseHTML(str:String):void		{			var xml:XML = new XML(str);			//var imgURL:URLRequest=new URLRequest(xml.div.a.img.@src);			this.pict_mc.loadURL(xml.div.a.img.@src);					}	}	}